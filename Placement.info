<Placement>
  <Match DisplayType="Detail">
    <!-- hide summary, show full content, for Detail -->
    <Place 
           Parts_Common_Metadata="-"/>
  </Match>
  <Match ContentType="Blog">
    <Place Parts_Title="-"
           Parts_Common_Metadata="-"/>
  </Match>
  <Match ContentType="RecentBlogPosts">
    <Place Parts_Title="-" />
  </Match>
  <Match ContentType="HtmlWidget">
    <Place Parts_Title="-" />
  </Match>
  <Match ContentType="RandomBlogPosts">
    <Place Parts_Title="-" />
  </Match>
  <Match ContentType="BlogPost">
    <Match DisplayType="Summary">
      <Place Parts_Common_Body_Summary="Summary:0"
             Parts_Tags_ShowTags="Tags:0"
             Parts_Comments_Count="CommentsCount:0"
             Parts_Common_Metadata_Summary="-" />
    </Match>
    <Match DisplayType="Detail">
      <Place Parts_Preview="-"/>
    </Match>
  </Match>
</Placement>