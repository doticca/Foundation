@using Orchard.ContentManagement;
@{
    var blogPost = Model.ContentItem;
}
<div class="row bump-25">
    <div class="large-12 columns">
        <div class="post-box">
            <div class="post">
                <h1 class="light centered-text">
                    <a href="@Url.ItemDisplayUrl((IContent)blogPost)">@Html.Raw(blogPost.TitlePart.Title)</a>
                </h1>
                <div class="row">
                    <div class="large-8 columns large-centered">
                        <div class="comment-author-line">
                            <p class="centered-text">
                                @(blogPost.CommonPart.Owner.UserName) wrote this on @(blogPost.CommonPart.CreatedUtc.ToString("MMMM d, yyyy")). @Display(Model.Tags)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="large-8 columns large-centered">
                        <div class="new-post">
                            @Display(Model.Content)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="large-12 columns">
                        <hr class="dotted">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>